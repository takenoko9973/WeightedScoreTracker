{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "args": [
                "--release",
                "--bin=score_app"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo run"
        },
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "args": [
                "--release",
                "--bin=score_app",
                "--target=x86_64-pc-windows-gnu"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "label": "rust: cross compile for windows"
        },
        {
            "type": "cargo",
            "command": "install-update",
            "problemMatcher": [
                "$rustc"
            ],
            "args": [
                "-a",
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "label": "rust: update all cargo installed package"
        }
    ]
}
